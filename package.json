{
  "name": "webpack-tdd-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate Webpack build with mocha and chai.",
  "main": "src/js/main.js",
  "scripts": {
    "dev": "./node_modules/.bin/webpack-dev-server --content-base dist",
    "build-production": "./node_modules/.bin/webpack production",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run test-unit",
    "test-unit": "mocha test/unit --recursive --require ./test/unit/.setup.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eddyerburgh/webpack-tdd-boilerplate.git"
  },
  "author": "Edd Yerburgh",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "chai": "^3.5.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb": "^11.2.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "mocha": "^3.0.2",
    "node-sass": "^3.10.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  }
}
